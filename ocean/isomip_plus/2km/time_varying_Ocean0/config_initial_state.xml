<?xml version="1.0"?>
<config case="initial_state">
	<add_link source="../base_mesh/culled_mesh.nc" dest="mesh.nc"/>
	<add_link source="../base_mesh/culled_graph.info" dest="graph.info"/>
	<add_link source="../base_mesh/input_geometry_processed.nc" dest="input_geometry_processed.nc"/>
	<add_link source="../Ocean0.cfg" dest="Ocean0.cfg"/>

	<add_executable source="model" dest="ocean_model"/>
	<copy_file source_path="script_test_dir" source="initial_state.py" dest="initial_state.py"/>
	<copy_file source_path="script_test_dir" source="namelist.py" dest="namelist.py"/>

	<namelist name="namelist.ocean" mode="init">
		<template file="template_init.xml" path_base="script_configuration_dir"/>
		<option name="config_write_cull_cell_mask">.false.</option>
		<option name="config_isomip_plus_init_bot_temp">1.0</option>
		<option name="config_isomip_plus_init_bot_sal">34.7</option>
		<option name="config_isomip_plus_restore_evap_rate">200.0</option>
	</namelist>

	<streams name="streams.ocean" keep="immutable" mode="init">
		<template file="template_init.xml" path_base="script_configuration_dir"/>
	</streams>

</config>
